<!DOCTYPE html>
<html>
<head>
    <title>İletişim Formu</title>
    <link rel="stylesheet" href="~/css/iletisim.css" asp-append-version="true">
</head>
<body>
    <nav>
        <div class="name">
            <a style="font-size: 20px;"> MUSTAFA GÜNDÜZ </a>
            <a style=" font-size: 20px; font-family: 'Montserrat', 'sans-serif';"> / BİLGİSAYAR MÜHENDİSİ </a>
        </div>
        <ul class="menu">
            <li><a href="@Url.Action("Index","Home")">Ana Sayfa</a></li>
            <li><a href="@Url.Action("cv","Home")">CV</a></li>
            <li><a href="@Url.Action("iletisim","Home")">İLETİŞİM</a></li>
        </ul>
    </nav>
    <div class="container">
        <form class="form" action="#" method="POST">
            <div class="form-group">
                <label for="name">İsim:</label>
                <input type="text" id="name" name="name" required>
                <label for="surname">Soyisim:</label>
                <input type="text" id="surname" name="surname" required>
            </div>
            <div class="form-group">
                <label for="email">E-posta:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="phone">Telefon:</label>
                <input type="text" id="phone" name="phone">
            </div>
            <div class="form-group">
                <label for="message">Mesajınız:</label>
                <textarea id="message" name="message" required></textarea>
            </div>
            <input type="submit" value="Gönder">
        </form>
    </div>
    <footer>
        <p>© 2023 WEB PROJESİ</p>
    </footer>

</body>
</html>


